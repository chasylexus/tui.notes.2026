{
  "name": "@techie_doubts/tui.notes.2026",
  "version": "1.0.6",
  "description": "Apple Notes-style local markdown notes app powered by @techie_doubts/tui.editor.2026",
  "type": "module",
  "license": "0BSD",
  "engines": {
    "node": ">=18.18.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "notes",
    "markdown",
    "editor",
    "toast-ui",
    "tui",
    "apple-notes"
  ],
  "files": [
    "bin",
    "dist",
    "server",
    "tui-notes.config.example.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "concurrently -k \"npm:dev:server\" \"npm:dev:client\"",
    "dev:client": "vite --host 127.0.0.1 --port 8080",
    "dev:server": "node server/index.js",
    "start": "node server/index.js",
    "cli": "node bin/tui-notes-2026.js",
    "build": "vite build",
    "preview": "vite preview",
    "prepack": "npm run build",
    "check:pack": "npm pack --dry-run"
  },
  "bin": {
    "tui-notes-2026": "./bin/tui-notes-2026.js"
  },
  "dependencies": {
    "@techie_doubts/editor-plugin-chart": "^3.0.1",
    "@techie_doubts/editor-plugin-code-syntax-highlight": "3.1.0",
    "@techie_doubts/editor-plugin-color-syntax": "^3.1.0",
    "@techie_doubts/editor-plugin-export": "^3.0.1",
    "@techie_doubts/editor-plugin-katex": "^3.0.1",
    "@techie_doubts/editor-plugin-mermaid": "^3.0.1",
    "@techie_doubts/editor-plugin-table-merged-cell": "^3.1.0",
    "@techie_doubts/editor-plugin-uml": "^3.0.1",
    "@techie_doubts/tui.chart.2026": "^4.6.1",
    "@techie_doubts/tui.color-picker.2026": "^2.2.8",
    "@techie_doubts/tui.editor.2026": "3.2.2",
    "express": "^4.21.2",
    "katex": "^0.16.28",
    "mermaid": "^11.12.0",
    "prismjs": "^1.30.0",
    "prosemirror-transform": "1.4.2"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "vite": "7.3.1"
  },
  "overrides": {
    "dompurify": "3.3.1",
    "prosemirror-state": "1.3.4",
    "prosemirror-transform": "1.4.2",
    "prosemirror-model": "1.17.0",
    "prosemirror-view": "1.18.1",
    "prosemirror-commands": "1.5.0",
    "prosemirror-history": "1.3.0",
    "prosemirror-keymap": "1.2.0",
    "prosemirror-inputrules": "1.2.1",
    "prosemirror-schema-list": "1.2.2"
  }
}
